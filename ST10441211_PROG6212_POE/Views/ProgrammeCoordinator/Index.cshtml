@model IEnumerable<ST10441211_PROG6212_POE.Models.ClaimModel>
@{
    ViewData["Title"] = "Programme Coordinator - Claims Overview";
}

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Claims Overview</h1>
        <p class="lead">As Programme Coordinator, you can view all claims and monitor the workflow.</p>
    </div>

    <table class="table table-striped table-bordered bg-white text-dark">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
                <th>Reviewed By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.LecturerId</td>
                    <td>@claim.ClaimType</td>
                    <td>@claim.ClaimDate.ToShortDateString()</td>
                    <td>
                        <span class="badge bg-@(claim.Status == "Pending" ? "warning" : (claim.Status == "Approved" ? "success" : "danger"))">
                            @claim.Status
                        </span>
                    </td>
                    <td>@("Manager " + claim.ClaimId % 3) <!-- placeholder reviewer --> </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
