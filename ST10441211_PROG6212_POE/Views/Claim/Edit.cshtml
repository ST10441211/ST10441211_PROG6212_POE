@model ST10441211_PROG6212_POE.Models.ClaimModel

@{
    ViewData["Title"] = "Edit Claim";
}

<style>
    body {
        background-color: #0a0a0a;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
        background-color: #4b0082;
    }

        .navbar .nav-link {
            color: #fff !important;
            margin-right: 1rem;
            transition: color 0.3s;
        }

            .navbar .nav-link:hover {
                color: #d8b4f8 !important;
            }

    .form-control {
        background-color: #1a1a1a;
        border: 1px solid #4b0082;
        color: #fff;
    }

        .form-control:focus {
            background-color: #1a1a1a;
            border-color: #6a0dad;
            color: #fff;
            box-shadow: 0 0 0 0.2rem rgba(106, 13, 173, 0.25);
        }

    .form-label {
        color: #d8b4f8;
        font-weight: 500;
    }

    .btn-purple {
        background-color: #6a0dad;
        border-color: #6a0dad;
        color: #fff;
    }

        .btn-purple:hover {
            background-color: #7b1fa2;
            border-color: #7b1fa2;
        }

    .card {
        background-color: #1a1a1a;
        border: 1px solid #4b0082;
        border-radius: 15px;
    }

    .card-header {
        background-color: #4b0082;
        border-bottom: 1px solid #6a0dad;
        border-radius: 15px 15px 0 0 !important;
    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">ST10441211_PROG6212_POE</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Claim">Claims</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/AcademicManager">Academic Manager</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ProgrammeCoordinator">Programme Coordinator</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Edit Claim #@Model.ClaimId</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ClaimId" />
                        <input type="hidden" asp-for="LecturerId" />
                        <input type="hidden" asp-for="ClaimDate" />
                        <input type="hidden" asp-for="Status" />

                        <div class="mb-3">
                            <label asp-for="ClaimType" class="form-label">Claim Type</label>
                            <select asp-for="ClaimType" class="form-control">
                                <option value="">-- Select Claim Type --</option>
                                <option value="Lecture Hours">Lecture Hours</option>
                                <option value="Tutorial Hours">Tutorial Hours</option>
                                <option value="Practical Hours">Practical Hours</option>
                                <option value="Marking">Marking</option>
                                <option value="Consultation">Consultation</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="ClaimType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide details about your claim..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <p class="text-muted">
                                <strong>Claim Date:</strong> @Model.ClaimDate.ToString("yyyy-MM-dd HH:mm")<br />
                                <strong>Status:</strong> <span class="badge bg-warning text-dark">@Model.Status</span>
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Claim/List" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-purple">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}